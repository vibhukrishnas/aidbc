FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY client/package*.json ./
RUN npm ci --only=production

# Copy source code
COPY client/ ./

# Build the app
RUN npm run build

# Serve with nginx
FROM nginx:alpine
COPY --from=0 /app/build /usr/share/nginx/html

# Copy custom nginx config
COPY deployment/docker/nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
